<%- include ("../partials/header") %>
<div class="row">
    <h1 style="text-align: center;">Edit <%= blog.name %> </h1>
    <div style="width: 30%; margin: 4vh auto;">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="blog[name]" value="<%= blog.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="blog[description]" value="<%= blog.description %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="blog[price]" min="300" step="10"
                    value="<%= blog.price %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/blogs/<%= blog._id %>">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer") %>