<%- include ("../partials/header") %>
<div class="row">
    <h1 style="text-align: center;">Create a new Blog</h1>
    <div style="width: 30%; margin: 4vh auto;">
        <form action="/blogs" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <!-- <input class="form-control" type="text" name="image" placeholder="Image URL"> -->
                <input type="file" class="form-control" name="image" id="inpFile">
            </div>
            <div class="form-group">
                <div class="image-preview form-control" id="imagePreview">
                    <img class="boilerplate-image" alt="Image Preview">
                    <span class="boilerplate-text  text-center">Image Preview <br>(width may be trimmed, but will appear
                        in website)</span>
                </div>
            </div>
            <div class="form-group">
                <!-- <input class="form-control" type="text" name="description" placeholder="description"> -->
                <textarea class="form-control" name="description" placeholder="description" cols="30"
                    rows="4"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/blogs">Go Back</a>
    </div>
</div>
