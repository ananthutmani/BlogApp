<%- include ("../partials/header") %>
<div class="row">
    <h1 style="text-align: center;">Edit Comment </h1>
    <div style="width: 30%; margin: 4vh auto;">
        <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <!-- <input class="form-control" type="text" name="comment[text]" value=""> -->
                <textarea class="form-control" name="comment[text]" cols="30" rows="2"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/blogs/<%= blog_id %>">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer") %>